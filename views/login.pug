extends base.pug
block content
    form.my-2.mx-5.needs-validation(action="/login" method="POST", novalidate)
        div
            p.red= error
        .mb-3
            label.form-label(for='email') Email address
            input#email.form-control(type='email' , name="email", aria-describedby='emailHelp' required)
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
        .mb-3
            label.form-label(for='password') Password
            input#password.form-control(type='password' , name="password" required)
        .mb-3.form-check
            input#types.form-check-input(type='checkbox')
            label.form-check-label(for='types') Save Password
        button.btn.btn-primary(type='submit') Login
//- bootstrap and custom scripts
block scripts
