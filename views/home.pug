extends base.pug
block content 
    link(rel="stylesheet", href="../static/css/home.css")
    include ./partials/flash.pug

    div#booksSection.bg-common.d-flex.flex-wrap.justify-content-center.align-items-center
        if(books)       
            each book in books
                .card.mx-2(style='width: 18rem;')
                    img.card-img-top(src=book.bookImg, alt='Book Image', width="200px",height="200px")
                    .card-body
                        h5.card-title= book.bookName
                        p.card-text(style="height: 100px;overflow: hidden;")=book.details
                        a.btn.btn-primary(href='#') View Full

block scripts 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    script(src="../static/css/home.css") 
