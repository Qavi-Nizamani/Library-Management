extends base.pug
block content
    link(rel="stylesheet", href="../static/css/signup.css")
    form#signupForm.row.g-3.needs-validation(action="/signup" ,method="POST" ,novalidate='')
        p#errorMessage.red= message
        h3 Sign Up
        #inputUserName.col-md-6
            label.form-label(for='username') User Name
            input#username.form-control(type='text', name="username", placeholder="Write a strong password" ,required='')
            .invalid-feedback
                | Please provide a username.
        #inputName.col-md-6
            label.form-label(for='name') Name
            input#name.form-control(type='text', name="name", placeholder='Enter Your Name.', required='')
            .invalid-feedback
                | Enter your name.
        #inputPhone.col-md-6
            label.form-label(for='phone') Phone
            input#phone.form-control(type='text', name="phone", placeholder='e.g: 03331122333', required='')
            .invalid-feedback
                | Enter your mobile number.
        .col-md-6
            label.form-label(for='email') Email
            #inputEmail.input-group.has-validation
                span#inputGroupPrepend.input-group-text @
                input#email.form-control(type='email', name="email" ,placeholder="xyz@xyz.com",aria-describedby='inputGroupPrepend', required='')
                .invalid-feedback
                    | Please provide your email.
        #inputAddress.col-md-6
            label.form-label(for='address') Address
            input#address.form-control(type='text', name="address" ,required='')
            .invalid-feedback
                | Please provide a valid address.
        #inputPassword.col-md-6
            label.form-label(for='password') Password
            input#password.form-control(type='text', name="password", placeholder="Write a strong password" ,required='')
            .invalid-feedback
                | Please provide a password.
        #inputPassword.col-md-6
            label.form-label(for='confirmPassword') Confirm Password
            input#confirmPassword.form-control(type='text', name="confirmPassword", placeholder="Write a strong password" ,required='')
            .invalid-feedback
                | Please provide a password.
        .col-12
            button#btnSignUp.btn.btn-primary(type='submit') Sign Up
            a.btn.btn-primary(aria-current='page', href='/login') Login 
