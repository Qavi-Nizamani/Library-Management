extends base.pug
block content 
    //- Section for adding a new book 
    section.container.my-4
        if(isAdmin)
            .container.text-center 
                h2 Total Users
                table.my-2.table.table-light.table-striped
                    thead
                        tr
                            th(scope='col') Name
                            th(scope='col') Phone
                            th(scope='col') Email
                            th(scope='col') Address
                            th(scope='col') Action

                    tbody#tBody
                    each user in users 
                        tr 
                            td= user.name
                            td= user.phone
                            td= user.email
                            td= user.address
                            td  
                                a.btn.btn-primary(href="/users/"+user._id) Edit

